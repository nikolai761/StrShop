@model SearchViewModel

<form method="post">
    <div class="row form-group">
        <div class="col-md-7">
            <input asp-for="@Model.Text" class="form-control" id="TextSearchInput" placeholder="Search" />
        </div>
        <div class="col-md-5">
            <button class="btn btn-success" id="ApplyTextSearchButton"> Search </button>
        </div>
    </div>
</form>

<div class="nl">
    <table class="table table-striped table-bordered ">
        <tbody class="table-responsive ">
            <tr><th>Название</th><th>Цена</th><th>Описание  </th></tr>
            @foreach (var item in Model.items)
            {
                <tr>
                    <td>
                        @item.ItemName
                    </td>
                    <td>
                        @item.price
                    </td>
                    <td>
                        @item.Description
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
