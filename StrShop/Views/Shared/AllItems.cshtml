@model Item

<div class="col-lg-3">
    <img class=" img-thumbnail" src="@Model.img" width="180" height="180" alt="@Model.ItemName" />
    <h2> @Model.ItemName</h2>
    <p>Price: @Model.price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.id">Добавить в корзину</a></p>
</div>